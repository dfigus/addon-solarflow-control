{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "reviewers": [
    "dfigus"
  ],
  "assignees": [
    "dfigus"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies",
    "no-stale"
  ],
  "configMigration": true,
  "commitMessagePrefix": "⬆️",
  "commitMessageTopic": "{{depName}}",
  "extends": [],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//Dockerfile$/",
        "//build.yaml$/"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\s+",
        "(aarch64|amd64|armhf|armv7|i386):\\s[\"']?(?<depName>.*?):(?<currentValue>.*?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//Dockerfile$/"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\\s\\s(?<package>[a-z0-9][a-z0-9-_]+)=(?<currentValue>[a-z0-9-_.]+)\\s+"
      ],
      "versioningTemplate": "loose",
      "datasourceTemplate": "repology",
      "depNameTemplate": "alpine_3_22/{{package}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//Dockerfile$/"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG SOLARFLOW_RELEASE=\"(?<currentValue>.*?)\"\\n"
      ],
      "depNameTemplate": "reinhard-brandstaedter/solarflow-control",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//Dockerfile$/"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG SOLARFLOW_BT_DIGEST=\"(?<currentDigest>.*?)\"\\n"
      ],
      "currentValueTemplate": "master",
      "depNameTemplate": "solarflow-bt-manager",
      "packageNameTemplate": "https://github.com/reinhard-brandstaedter/solarflow-bt-manager/",
      "datasourceTemplate": "git-refs"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases",
        "git-refs"
      ],
      "automerge": true,
      "minimumReleaseAge": "1 day",
      "versioning": "loose",
      "automergeSchedule": [
        "on saturday"
      ]
    },
    {
      "matchDatasources": [
        "repology"
      ],
      "groupName": "Alpine packages",
      "automerge": true
    },
    {
      "groupName": "Add-on base image",
      "matchDatasources": [
        "docker"
      ]
    },
    {
      "groupName": "Add-on base image",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "addLabels": [
        "python"
      ],
      "rangeStrategy": "pin"
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
